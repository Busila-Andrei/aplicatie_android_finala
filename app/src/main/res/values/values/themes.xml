<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Frontend" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Stil personalizat pentru butoane -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Alte stiluri -->
    <style name="CustomCircularProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/custom_circular_progress</item>
        <item name="android:layout_width">125dp</item> <!-- ajustați dimensiunea după necesități -->
        <item name="android:layout_height">125dp</item> <!-- ajustați dimensiunea după necesități -->
    </style>

</resources>
